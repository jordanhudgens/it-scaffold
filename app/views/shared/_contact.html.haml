/ Contact Section
%section#contact
  .container
    .row
      .col-lg-12.text-center
        %h2.section-heading Contact Us
        %h3.section-subheading.text-muted Message us with any questions you may have
    .row
      .col-lg-12
        = form_tag 'leads'

        .col-md-6
          .form-group
            = text_field_tag :name, nil, placeholder: 'Your Name', class: 'form-control'

          .form-group
            = text_field_tag :email, nil, placeholder: 'Your Email', class: 'form-control'

          .form-group
            = text_field_tag :phone, nil, placeholder: 'Your Phone', class: 'form-control'

        .col-md-6
          .form-group
            = text_area_tag :message, nil, placeholder: 'Your Message', class: 'form-control'

        .col-md-12
          .form-group
            = submit_tag 'Submit', class: 'btn btn-primary btn-block'