<footer>
	<div class="footer">
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-md-4 footer-widget">
				</div>

				<div class="col-sm-4 col-md-4 footer-widget">
					<h3>Recent posts</h3>
					<div class="post-recent-widget">
						<div class="row">
							<div class="col-sm-12">
								<% @recent_blogs.each do |blog| %>
									<div class="media">
										<div class="media-body">
											<h4 class="media-heading"><%= link_to blog.title, blog %></h4>
											<p class="post-date"><%= blog.created_at.strftime("%B %d, %Y") %></p>
										</div>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>

				<div class="col-sm-4 col-md-4 footer-widget clearfix">
				</div>
			</div>
		</div>
	</div>
	<div class="copyright">
		<div class="container">
			<ul class="social-links pull-right">
				<li><a href="#link"><i class="icon-twitter"></i></a></li>
				<li><a href="#link"><i class="icon-facebook"></i></a></li>
				<li><a href="#link"><i class="icon-googleplus"></i></a></li>
			</ul>
		</div>
	</div>
</footer>